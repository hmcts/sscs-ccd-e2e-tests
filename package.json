{
  "name": "sscs-ccd-e2e-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "webdriver-manager update --gecko=false",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "e2e": "yarn test:fullfunctional",
    "test:fullfunctional": "yarn install && protractor ./e2e/features.parallel.conf.js --cucumberOpts.tags=@hearing-recording",
    "test:aat": "yarn install && cross-env TRIBUNALS_API_URL=http://sscs-tribunals-api-aat.service.core-compute-aat.internal TEST_JUDGE_USERNAME='sscs.judge.user@mailinator.com' TEST_JUDGE_PASSWORD='Testing123' TEST_DWP_USERNAME='sscs.dwp.user@mailinator.com' TEST_DWP_PASSWORD='Testing123' TEST_CASEOFFICER_USERNAME='jrich3683@gmail.com' TEST_CASEOFFICER_PASSWORD='Testing123' protractor ./e2e/features.parallel.conf.js  --cucumberOpts.tags=@hearing-recording",
    "test:crossbrowser": "yarn install && cross-env TEST_FOR_CROSS_BROWSER='true' protractor ./e2e/features.crossbrowser.conf.js --cucumberOpts.tags='@crossbrowser' --cucumberOpts.tags=~@OnlyIfSaveAndContinueIsEnabled",
    "test:prod": "yarn install && protractor ./e2e/features.parallel.conf.js --cucumberOpts.tags=@nightly-test --cucumberOpts.tags=~@issue-decision --cucumberOpts.tags=~@uc --cucumberOpts.tags=~@reinstatement --cucumberOpts.tags=~@bundle",
    "test:nsp": "nsp check",
    "test:a11y": "yarn install && TEST_E2E_NUM_BROWSERS='1' protractor ./e2e/features.parallel.conf.js --cucumberOpts.tags=@a11y"
  },
  "dependencies": {
    "@angular/compiler": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@axe-core/webdriverjs": "^4.1.1",
    "@hmcts/eslint-config": "^1.4.0",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@types/chai": "^4.1.6",
    "@types/cucumber": "^4.0.4",
    "@types/jasmine": "^2.8.9",
    "@types/node": "^10.12.0",
    "axe-core": "^4.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codelyzer": "^4.5.0",
    "cross-env": "^4.0.0",
    "cucumber": "^5.0.2",
    "cucumber-pretty": "^1.5.2",
    "faker": "^5.1.0",
    "jasmine-core": "^3.2.1",
    "jasmine-spec-reporter": "^4.2.1",
    "moment": "^2.28.0",
    "nsp": "^3.2.1",
    "path": "^0.12.7",
    "protractor": "~5.4.0",
    "protractor-beautiful-reporter": "^1.2.5",
    "protractor-cucumber-framework": "^6.1.1",
    "protractor-multiple-cucumber-html-reporter-plugin": "^1.8.1",
    "protractor-retry": "^1.2.13",
    "puppeteer": "^1.9.0",
    "request-promise": "^4.2.5",
    "rxjs": "^6.3.3",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.9.7"
  }
}
